<div class=container>
  <div class="row">
    <div class="col-md-4">

      <%= render 'user',user: @user %>
      <%= render 'book',book: @book %>
    </div>

    <div class="col-md-7 offset-md-1">
<h2>Books</h2>
    <% link_to book_path(@book) do %>
      <%= image_tag @book.get_image %>
    <% end %>

    <table class="Books">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to  image_tag(@book.user.get_profile_image(100,100)),user_path(@book.user) %><br/>
            <%= current_user.id %>
          </td>
          <td>
            <%=link_to @book.title,book_path(@book) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
        </tr>
      <tbody>
      </table>
      <%= link_to "Edit",edit_book_path(@book)%>
      <%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" =>"本当に削除しますか?" %>
      </div>
    </div>
  </div>


