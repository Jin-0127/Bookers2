<div class=container>
  <div class="row">
    <div class="col-md-3">

      <%= render 'user',user: @user %>
      <%= render 'book',book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
          
    <table class="Books table">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to  image_tag(@book.user.get_profile_image(100,100)),user_path(@book.user) %><br/>
            <%=link_to @book.user.name,user_path(@book.user) %>
          </td>
          <td>
            <%=link_to @book.title,book_path(@book) %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
          <% if @book.user == current_user %>
            <%= link_to "Edit",edit_book_path(@book), {class: "btn btn-success"}%>
          <% end %>
          </td>
          <td>
          <% if  @book.user == current_user %>
            <%= link_to "Destroy",book_path(@book), method: :delete,data:{confirm:"本当に削除しますか?"}, class:"btn btn-danger" %>
          <% end %>
          </td>
        </tr>
      <tbody>
      </table>
    </div>
  </div>
</div>


