<div class= container>
  <div class=row>
<div  class="col-md-4">
<div>
  <h3>User info</h3>
  <%= image_tag @user.get_profile_image(100,100)%>
  <table class= "Usertable">
  <tr>
    <th>名前</th>
    <th><%=current_user.name %></th>
  </tr>

  <tr>
    <th>自己紹介文</th>
    <th><%=current_user.introduction %></th>
  </tr>
  </table>
  <%= link_to edit_user_path(@user),class:"btn btn-outline-secondary " do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>
</div>


<h1>book detail<h1>
<%= form_with model: @book do |f| %>
  
  <h4>本のタイトル<h4>
  <%= f.text_field :title %>
  <h4>感想</h4>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book' %>
<% end %>
</div>
<div class="col-md-7 offset-md-1">
<% @books.each do |book| %>
  <div>
    <h2>Books</h2>
    <% link_to book_path(book) do %>
      <%= image_tag book.get_image %>
    <% end %>

    <table class="Books">
      <thead>
        <th></th>
        <th>Title</th>
        <th>Option</th>
        <th colspan="3"></th>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to  image_tag(book.user.get_profile_image(100,100)),user_path(book.user) %><br/>
            <%= current_user.id %>
          </td>
          <td>
            <%=link_to book.title,book_path(book) %>
          </td>
          <td>
            <%= book.body %>
          </td>
        </tr>
      <tbody>
      </table>
  <% end %>
    </div>
  </div>
</div>


