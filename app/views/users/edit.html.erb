<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<div>
  <h3>User info</h3>

  <%= form_with model: @user do |f| %>

    <h4>Name</h4>
      <%= f.text_field :name ,class: "btn-block"%>

    <h4>Image</h4>
      <%= f.file_field :profile_image, accept: "image/*" %>

    <h4>introduction</h4>
      <%= f.text_area :introduction,class: "btn-block" %></br>
      
    <%= f.submit "Update User", class: "btn btn-secondary " %>
  <% end %>

</div>
    </div>
  </div>
</div>
