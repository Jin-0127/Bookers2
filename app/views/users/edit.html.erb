<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<div>
  <h3>User info</h3>

  <%= form_with model: @user do |f| %>
  
  <div class="form-group">
    <label for="user_name">Name</label>
      <%= f.text_field :name ,class: "btn-block"%>
  </div>

  <div class="form-group"> 
    <label for="user_image">Image</label><br/>
    <%= f.file_field :profile_image, accept: "image/*" %>
  </div>

  <div class="form-group">
    <label for="user_introduction">introduction</label>
      <%= f.text_area :introduction,class: "btn-block" %>
  </div>
      
    <%= f.submit "Update User", class: "btn btn-secondary " %>
  <% end %>

</div>
    </div>
  </div>
</div>
